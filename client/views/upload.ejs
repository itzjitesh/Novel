<%- include("partials/header") -%>

    <h1>Upload Your Book</h1>

    <form action="/uploads" method="post" class="upload-form">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" required="true">

            <label for="description">description</label>
            <textarea name="description" id="description" cols="30" rows="10" class="form-control"></textarea>

            <label for="bulletPoint">Bullet Points</label>
            <textarea name="bulletPoint" id="bulletPoint" cols="30" rows="10" class="form-control"></textarea>

            <label for="mainTheme">Main Theme</label>
            <input type="text" id="mainTheme" name="mainTheme" class="form-control">
        </div>
        
        <button type="submit" id="btn" class="btn btn-primary active">Publish</button>
    </form>

<%- include("partials/footer") -%>
    

